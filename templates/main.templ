						<input class="input"> <svg></svg> <input class="input">
					</div>
					<div class="vocabulary">
						<input class="input"> <svg></svg> <input class="input">
					</div>
					<div class="vocabulary">
						<input class="input"> <svg></svg> <input class="input">
					</div>
				</section>
				<div class="button-div">
