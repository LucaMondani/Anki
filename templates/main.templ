templ Vokabel_back(card Card) {
	<div hx-get={fmt.Sprintf("/get-front/%d", card.Id)} hx-target="#flashcard" hx-swap="outerHTML" id="flashcard">
		<h2>{card.Back}</h2>
	</div>
}
templ Vokabel_front(card Card) {
	<div hx-get={fmt.Sprintf("/get-back/%d", card.Id)} hx-target="#flashcard" hx-swap="outerHTML" id="flashcard">
