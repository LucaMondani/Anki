templ Home (deckInfos []Deck_info) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<script src="https://unpkg.com/htmx.org@2.0.2"></script>
    		<meta charset="UTF-8">
    		<meta name="viewport" content="width=device-width, initial-scale=1.0">
    		<title>Ankii</title>
			<style>
				body, html {
					height: 100%;
					width: 100%;
				}
				main {
					height: 85%;
				}
				h1 {
					font-size: 5em;
				}
				h2 {
					font-size: 2.5em;
					margin: 0;
				}
				p {
					font-size: 1.28rem;
					margin: 0;
					margin-top: 0.5rem;
				}
				.header {
					height:15%;
					width: 100%;
					display: flex;
					align-items: center;
					justify-content: center;
				}
				.center {
					text-align: center;
				}
				.flex-container {
					display: flex;
					justify-content: space-evenly;
					align-items: center;
					flex-wrap: wrap;
					row-gap: 4rem;
				}
				.flex-item {
					flex-basis: 15%;
					margin-left: 10%;
					margin-right: 10%;
					border: 2px solid black;
					border-radius: 25px;
					padding: 1%;
				}
				#new-deck {
					border-radius: 50%;
					width: 5rem;
					height: 5rem;
					font-size: 3rem;
				}
				.button-div {
					height: 10%;
					display:flex;
					justify-content: center;
					align-items: center;
				}
				a {
					text-decoration: none;
					color: black;
				}
			</style>
		</head>
		<body>
			<script src="https://unpkg.com/htmx.org@2.0.2"></script>
			@header1()
			<main>
				<div class="flex-container">
					for _, deck := range deckInfos {
						@lernset(deck.Id, deck.Title, deck.Description)
					}
					
				</div>
				<div class="button-div">
					<a href="/new"><button id="new-deck" >+</button></a>
				</div>
			</main>
			
		</body>
	</html>
}

