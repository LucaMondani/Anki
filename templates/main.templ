package templates

import (
	"fmt"
)

type Card struct {
	Id int
	Front string
	Back string
}
type Deck_info struct {
	Id int
	Title string
	Description string
}
type Deck struct {
	Info Deck_info
	Cards []Card
}


templ header1() {
	<header class="header">
		<a href="/"><h1 class="center">Anki</h1></a>
	</header>
}
templ lernset(id int, title, description string) {
	<div class="flex-item">
		<a href={ templ.URL(fmt.Sprintf("/deck/%d", id)) }><h2>{title}</h2></a>
		<p>{description}</p>
	</div>
}
